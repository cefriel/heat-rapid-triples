{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "title": "Evaluation Tool:",
            "default": "[Evaluation Tool Name]",
            "description": "Required name of the evaluation tool."
        },
        "description": {
            "type": "string",
            "x-display": "textarea",
            "title": "Evaluation Tool Description",
            "description": "Description of the evaluation tool"
        },
        "doi": {
            "type": "string",
            "title": "Bibliographic Source",
            "default": "DOI Link",
            "description": "Add DOI link here"
        },
        "doiDescription": {
            "type": "string",
            "x-display": "textarea",
            "title": "Insert full citation here",
            "description": "Insert full citation of the bibliographic source"
        },
        "resourceDiagram": {
            "title": "Tool Diagram URL",
            "type": "string"
        },
        "contextName": {
            "type": "string",
            "x-display": "textarea",
            "title": "Context it belongs to:",
            "default": "[Context Name]",
            "description": "Context reported in the bibliographic source",
            "examples": ["Context1"]
        },
        "contextDescription": {
            "type": "string",
            "x-display": "textarea",
            "title": "Context Description",
            "description": "Description of the context to which the evaluation tool belongs"
        },
        "hasConstruct": {
            "title": "Constructs of the Tool",
            "description": "Construct that defines a section of the evaluation tool",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "constructName": {
                        "type": "string",
                        "description": "Name of the Construct",
                        "title": "Construct Name"
                    },
                    "constructDescription": {
                        "type": "string",
                        "x-display": "textarea",
                        "title": "Description",
                        "description": "Description of the construct that belongs to the evaluation tool"
                    },
                        "Question": {
                        "title": "Questions of the Construct",
                        "description": "Question associated to the construct",
                        "type": "array",
                            "items": {
                            "type": "object",
                            "properties": {
                                "questionText": {
                                    "type": "string",
                                    "description": "Text of the question",
                                    "title": "Question text"
                                },
                                "likertAnswerNumericalRange": {
                                    "type": "string",
                                    "examples": ["[0-5]", "[1-7]", "[1-9]"],
                                    "description": "Range in which the question's answer is defined",
                                    "title": "Numerical answer value range"
                                },
                                "likertAnswerTextualRange": {
                                    "type": "string",
                                    "examples": ["[Bad-Good]", "[Low-High]", "[Strongly Disagree-Strongly Agree]", "[Completely Disagree-Completely Agree]"],
                                    "description": "Range in which the question's answer is defined",
                                    "title": "Textual answer value range"
                                },
                                "isScaleReversed": {
                                    "type": "boolean",
                                    "default": false, 
                                    "title": "It is a reversed scale",
                                    "description": "Flag this field if the answer rating scale is reversed "
                                }
                            }
                        }
                    }
                }
            }
        },
        "id": {
            "title": "Identifier",
            "type": "string",
            "x-display": "hidden"
        },
        "created": {
            "title": "Creation datetime",
            "type": "string",
            "x-display": "hidden"
        },
        "modified": {
            "title": "Modification datetime",
            "type": "string",
            "x-display": "hidden"
        },
        "status": {
            "title": "Status",
            "type": "string",
            "x-display": "hidden"
        },
        "type": {
            "title": "Type",
            "type": "string",
            "x-display": "hidden"
        },
        "user": {
            "title": "User",
            "type": "string",
            "x-display": "hidden"
        }
    }
}